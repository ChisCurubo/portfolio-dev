---
import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}

const PROJECTS = [
  {
    title: "Bounsic – Plataforma de Reproducción Musical",
    description:
      "Desarrollo de una plataforma web de reproducción musical alojada en Azure, con algoritmos de recomendación basados en scraping, crawling, transformada de Fourier y BERT. Proyecto académico.",
    link: "https://www.youtube.com/watch?v=EWtBTfPVWO8&ab_channel=JuanDavidPati%C3%B1oParra",
    github: "https://github.com/Bounsic-A-S/Bounsic-dev.git",
    image: "/projects/bounsic.webp", // Asigna una imagen propia si tienes
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Vitamed IPS – Sistema Web",
    description:
      "Sistema web con funcionalidades CRUD, gestión de citas y control de roles, simulando un ERP/CRM. Proyecto académico para Proyecto Integrador I.",
    link: "https://github.com/Jerdirlson/ProyectoIntegrador.git",
    github: "https://github.com/Jerdirlson/ProyectoIntegrador.git",
    image: "/projects/vitamed.webp", // Asigna una imagen propia si tienes
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "IPS Salud Pro – Sistema Web",
    description:
      "Sistema web con gestión de citas médicas, CRUD de usuarios y roles. Proyecto académico desarrollado en la materia de Ingeniería de Software.",
    link: "https://github.com/Jerdirlson/Ing-Software-front.git",
    github: "https://github.com/Jerdirlson/Ing-Software-front.git",
    image: "/projects/saludpro.webp", // Asigna una imagen propia si tienes
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Sistema de Análisis de Tráfico",
    description:
      "Simulación de tráfico vehicular utilizando SUMO y análisis de datos obtenidos. Presentado en el Foro FIME II en la asignatura de Ecuaciones Diferenciales.",
    link: "https://github.com/ChisCurubo/EcuacionesTrafico.git",
    github: "https://github.com/ChisCurubo/EcuacionesTrafico.git",
    image: "/projects/trafico.webp", // Asigna una imagen propia si tienes
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Whack a Frog (Juego)",
    description:
      "Juego inspirado en Whack-a-Mole, desarrollado como parte de la materia Paradigmas de Programación. Implementado en Java con interfaz gráfica.",
    link: "https://github.com/namekulero/WhackAFrog.git",
    github: "https://github.com/namekulero/WhackAFrog.git",
    image: "/projects/frog.webp", // Asigna una imagen propia si tienes
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---


<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="No Image" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-white-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-white-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



