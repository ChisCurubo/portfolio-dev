---
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Java from "./icons/Java.astro";
import Python from "./icons/Python.astro";
import Html from "./icons/Html.astro";
import Css from "./icons/Css.astro";
import Sql from "./icons/Sql.astro";
import Sumo from "./icons/Sumo.astro";
import Mongo from "./icons/Mongo.astro";
import Azure from "./icons/Azure.astro";
import Typescript from "./icons/Typescript.astro";
import Javascript from "./icons/Javascript.astro";
import React from "./icons/React.astro";
import Node from "./icons/Node.astro";
import Express from "./icons/Express.astro";
import Vue from "./icons/Vue.astro";
import Gunicorn from "./icons/Gunicorn.astro";
import AdobeXD from "./icons/AdobeXD.astro";
import AdobeIllustrator from "./icons/AdobeIllustrator.astro";
import Angular from "./icons/Angular.astro";
import PowerBi from "./icons/PowerBi.astro";
import Cuda from "./icons/Cuda.astro";
import GCP from "./icons/GCP.astro";
import Flutter from "./icons/Flutter.astro";
import MLKit from "./icons/MLKit.astro";
import es from "../json/locales/es.json";
import en from "../json/locales/en.json";

interface Props {
  lang?: "es" | "en";
}

const { lang = "es" } = Astro.props;
const locale = lang === "en" ? en : es;
const projectsData = locale.projects;

const TAGS: Record<string, { name: string; class: string; icon: any }> = {
  NEXT: { name: "Next.js", class: "bg-black text-white text-sm", icon: NextJS },
  TAILWIND: { name: "Tailwind", class: "bg-[#003159] text-white text-sm", icon: Tailwind },
  JAVA: { name: "Java", class: "bg-[#007396] text-white text-sm", icon: Java },
  PYTHON: { name: "Python", class: "bg-[#3776AB] text-white text-sm", icon: Python },
  HTML: { name: "HTML", class: "bg-[#E34F26] text-white text-sm", icon: Html },
  CSS: { name: "CSS", class: "bg-[#1572B6] text-white text-sm", icon: Css },
  SQL: { name: "SQL", class: "bg-[#336791] text-white text-sm", icon: Sql },
  SUMO: { name: "SUMO", class: "bg-[#FF6B00] text-white text-sm", icon: Sumo },
  MONGODB: { name: "MongoDB", class: "bg-[#13AA52] text-white text-sm", icon: Mongo },
  AZURE: { name: "Azure", class: "bg-[#0072C6] text-white text-sm", icon: Azure },
  GITHUB: { name: "Github", class: "bg-[#181717] text-white text-sm", icon: GitHub },
  TYPESCRIPT: { name: "Typescript", class: "bg-[#3178C6] text-white text-sm", icon: Typescript },
  JAVASCRIPT: { name: "Javascript", class: "bg-[#F7DF1E] text-black text-sm", icon: Javascript },
  REACT: { name: "React", class: "bg-[#61DAFB] text-black text-sm", icon: React },
  NODE: { name: "Node.js", class: "bg-[#339933] text-white text-sm", icon: Node },
  EXPRESS: { name: "Express", class: "bg-[#000000] text-white text-sm", icon: Express },
  VUE: { name: "Vue.js", class: "bg-[#41B883] text-white text-sm", icon: Vue },
  GUNICORN: { name: "Gunicorn", class: "bg-[#499490] text-white text-sm", icon: Gunicorn },
  ADOBE_XD: { name: "Adobe XD", class: "bg-[#FF61F6] text-white text-xs", icon: AdobeXD },
  ADOBE_ILLUSTRATOR: { name: "Adobe Illustrator", class: "bg-[#FF9A00] text-white text-xs", icon: AdobeIllustrator },
  ANGULAR: { name: "Angular", class: "bg-[#DD0031] text-white text-sm", icon: Angular },
  POWERBI: { name: "Power BI", class: "bg-yellow-500 text-black text-sm", icon: PowerBi },
  CUDA: { name: "CUDA", class: "bg-green-600 text-white text-sm", icon: Cuda },
  GCP: { name: "Google Cloud", class: "bg-blue-600 text-white text-sm", icon: GCP },
  FLUTTER: {name: "Flutter", class: "bg-[#02569B] text-white text-sm", icon: Flutter},
  MLKIT: { name: "ML Kit",class: "bg-[#4285F4] text-white text-sm", icon: MLKit}


};

const PROJECTS = projectsData.projects.map((p) => ({
  ...p,
  tags: (p.tags as string[]).map((key) => TAGS[key]).filter(Boolean),
}));

const { imageAlt, buttons } = projectsData;
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={imageAlt}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-white-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-wrap gap-2 mb-2">
              {tags.map((tag) => (() => {
                const TagIcon = tag.icon;
                return (
                  <li>
                    <span
                      class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                    >
                      <TagIcon class="size-4" />
                      {tag.name}
                    </span>
                  </li>
                );
              })())}
            </ul>

            <div class="mt-2 text-white-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  {buttons.code}
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  {buttons.preview}
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
