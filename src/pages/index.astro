---
// Redirigir al idioma. Las rutas con idioma son /es y /en.
const base = import.meta.env.BASE_URL?.replace(/\/$/, "") || "";
const redirectUrl = `${base}/es`;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
    <title>Redirecting...</title>
  </head>
  <body>
    <p>Redirecting to <a href={redirectUrl}>portfolio</a>...</p>
  </body>
</html>
